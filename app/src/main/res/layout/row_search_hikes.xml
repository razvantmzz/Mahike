<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="248dp"
    android:layout_height="wrap_content"
    android:layout_marginTop="24dp"
    android:layout_marginStart="24dp"
    android:layout_marginEnd="24dp">
    <android.support.v7.widget.CardView
        android:id="@+id/cv_image_view_container"
        android:layout_width="match_parent"
        android:layout_height="124dp"
        app:cardCornerRadius="5dp"
        android:background="@color/background"
        android:elevation="0dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#97000000"
                >
                <ImageView
                    android:id="@+id/iv_row_search"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_cabin"
                    android:scaleType="centerCrop"
                />
            </RelativeLayout>
            <TextView
                android:id="@+id/tv_row_search_hike_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"

                android:textStyle="bold"
                android:textAlignment="center"
                android:text="dsadsad"
                android:textColor="@color/white"
                android:textSize="16sp" />
            <TextView
                android:id="@+id/tv_row_search_duration"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="dsadsad"
                android:layout_below="@id/tv_row_search_hike_name"
                android:textAlignment="center"
                android:textColor="@color/white"
                android:textSize="14sp"/>
            <RelativeLayout
                android:id="@+id/rl_row_search_hikes_details_container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="gone"
                android:background="@color/searchCellOverlay">
                <TextView
                    android:id="@+id/tv_row_search_hike_details"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="6dp"
                    android:layout_alignParentBottom="true"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:textSize="18sp"
                    android:text="dasdsad"
                    />
            </RelativeLayout>
        </RelativeLayout>

    </android.support.v7.widget.CardView>
</RelativeLayout>
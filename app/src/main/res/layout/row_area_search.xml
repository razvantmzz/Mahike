<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp">
    <LinearLayout
        android:id="@+id/ll_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@id/btn_row_area_search_offline"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_row_area_search_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="18dp"
            android:padding="4dp"
            android:textStyle="bold"
            android:text="BUceg_o"
            />
        <TextView
            android:id="@+id/tv_row_area_search_mountain_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Muntii bucegi"
            android:padding="4dp"
            />
    </LinearLayout>
    <Button
        android:id="@+id/btn_row_area_search_offline"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_margin="6dp"
        android:padding="6dp"
        style="@style/CustomSecondaryButton"
        android:textColor="@color/black"
        android:text="dsadsadsa"
        />

</RelativeLayout>